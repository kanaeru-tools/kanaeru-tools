---
import "../styles/global.css";
const { title = "かなえるTools", description = "" } = Astro.props;
---


<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="かなえるTools" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://kanaeru-tools.com/" />
    <meta
      property="og:image"
      content="https://kanaeru-tools.com/ogp/crypto-run_image_free_light.jpg"
    />

    {description && <meta name="description" content={description} />}

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "かなえるTools",
        "alternateName": "Kanaeru Tools",
        "url": "https://kanaeru-tools.com/"
      }
    </script>

    <link rel="icon" href="/favicon.ico" />
  </head>

  <body>

    <!-- ヘッダー -->
    <header class="site-header">
      <div class="header-inner">
        <a href="/" class="site-logo">
          かなえるTools
          <span class="site-tagline">小さな業務を、ちゃんとかなえる</span>
        </a>

        <nav class="site-nav">
          <a href="/tools/crypto-run/">仮想通貨CSV圧縮</a>
          <a href="/terms/">利用規約</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <div class="main-inner">
        <slot />
      </div>
    </main>

    <!-- フッター -->
    <footer class="site-footer">
      <p>
        ツールの改善要望・対応してほしい取引所などがあればお気軽にご連絡ください。
      </p>
      <p>
        お問い合わせ：
        <a href="mailto:kanaeru.tools@gmail.com">
          kanaeru.tools@gmail.com
        </a>
      </p>
    </footer>


  </body>
</html>
